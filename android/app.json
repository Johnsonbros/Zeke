{
  "expo": {
    "name": "ZEKE AI",
    "slug": "zeke-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "zekeai",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zekeai.companion",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "ZEKE uses Bluetooth to connect to your Omi DevKit 2 or Limitless Pendant for audio capture and transcription.",
        "NSBluetoothPeripheralUsageDescription": "ZEKE uses Bluetooth to connect to your Omi DevKit 2 or Limitless Pendant for audio capture and transcription."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0F172A",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.zekeai.companion",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0F172A",
          "dark": {
            "backgroundColor": "#0F172A"
          }
        }
      ],
      "expo-web-browser",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "ZEKE uses Bluetooth to connect to your Omi DevKit 2 or Limitless Pendant for audio capture and transcription."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
