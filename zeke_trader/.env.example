# ZEKE Trader Environment Configuration
# Copy this to .env and fill in your values (or set as Replit secrets)

# OpenAI API Key (required for agent decisions)
OPENAI_API_KEY=

# Alpaca API Keys (required for trading)
ALPACA_KEY_ID=
ALPACA_SECRET_KEY=

# Trading Mode: paper | shadow | live
# - paper: Execute trades on paper trading account (default, safe)
# - shadow: Make decisions but DO NOT execute any orders
# - live: Real money trading (requires dual latch - see below)
TRADING_MODE=paper

# Live Trading Safety Latch
# BOTH conditions required for live trading:
# 1. TRADING_MODE=live
# 2. LIVE_TRADING_ENABLED=true
# If either is missing or false, live orders are blocked.
LIVE_TRADING_ENABLED=false

# Allowed symbols (comma-separated)
ALLOWED_SYMBOLS=NVDA,SPY,META,GOOGL,AVGO,GOOG,AMZN

# Risk Limits
MAX_DOLLARS_PER_TRADE=25
MAX_OPEN_POSITIONS=3
MAX_TRADES_PER_DAY=5
MAX_DAILY_LOSS=25

# Loop Configuration
LOOP_SECONDS=60

# Logging
LOG_DIR=zeke_trader/logs
