# Environment Variable Schema
# This file defines all environment variables for the application.
# Use this as a reference when setting up your environment.

# ===========================================
# REQUIRED - Fail fast if missing
# ===========================================

OPENAI_API_KEY=string                     # OpenAI API key for AI features (required)
ALLOWED_EXTERNAL_MODELS=string            # JSON array or comma list of provider:model ids allowed for external routing (optional)
DATABASE_URL=string                       # Database connection string (required)
JWT_SECRET=string                         # Secret key for JWT token signing (required)

# ===========================================
# APPLICATION SETTINGS
# ===========================================

APP_NAME=string                           # Application name (default: "ZEKE")
APP_ENV=enum:development|staging|production  # Runtime environment (default: development)
NODE_ENV=string                           # Node.js environment (default: development)
PORT=number                               # Server port (default: 5000)
LOG_LEVEL=enum:debug|info|warn|error      # Application log level (default: info)
EXTERNAL_MODEL_API_KEY=string             # API key for approved external model providers (optional)
SESSION_SECRET=string                     # Express session secret (optional)

# ===========================================
# PYTHON AGENTS
# ===========================================

PYTHON_AGENTS_PORT=number                 # Python FastAPI port (default: 5001)
PYTHONPATH=string                         # Python module path (optional)
USE_CONTEXT_ROUTER=string                 # Enable context router - "true"/"false" (optional)

# ===========================================
# TWILIO SMS/VOICE
# ===========================================

TWILIO_ACCOUNT_SID=string                 # Twilio account SID (optional)
TWILIO_AUTH_TOKEN=string                  # Twilio auth token (optional)
TWILIO_PHONE_NUMBER=string                # Twilio phone number E.164 format (optional)
MASTER_ADMIN_PHONE=string                 # Admin phone for notifications (optional)

# ===========================================
# OMI PENDANT
# ===========================================

OMI_API_KEY=string                        # Omi API key (optional)
OMI_DEV_API_KEY=string                    # Omi development API key (optional)
OMI_MCP_API_KEY=string                    # Omi MCP API key (optional)
OMI_COMMANDS_ENABLED=string               # Enable Omi command detection - "true"/"false" (optional)

# ===========================================
# GOOGLE CALENDAR
# ===========================================

GOOGLE_CALENDAR_CREDENTIALS=string        # Google service account JSON (optional)
GOOGLE_CALENDAR_ID=string                 # Google Calendar ID (optional)

# ===========================================
# EXTERNAL APIS
# ===========================================

OPENWEATHERMAP_API_KEY=string             # OpenWeatherMap API key (optional)
PERPLEXITY_API_KEY=string                 # Perplexity search API key (optional)

# ===========================================
# INTERNAL / SECURITY
# ===========================================

INTERNAL_BRIDGE_KEY=string                # Internal service communication key (optional)
EXPORT_SECRET_TOKEN=string                # Secure data export token (optional)
OVERLAND_ACCESS_TOKEN=string              # GPS tracking token (optional)

# ===========================================
# MORNING BRIEFINGS
# ===========================================

MORNING_BRIEFING_ENABLED=string           # Enable morning briefings - "true"/"false" (optional)
MORNING_BRIEFING_PHONE=string             # Phone for morning briefings (optional)
