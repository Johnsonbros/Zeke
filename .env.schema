# Environment Variable Schema
# This file defines all required environment variables for the application.
# Use this as a reference when setting up your environment.

# Application Settings
APP_NAME=string                           # Application name (e.g., "ZEKE")
APP_ENV=enum:development|staging|production  # Runtime environment
PORT=number                               # Server port (e.g., 5000)

# Database
DATABASE_URL=string                       # PostgreSQL connection string

# Security
JWT_SECRET=string                         # Secret key for JWT token signing

# External Services
OPENAI_API_KEY=string                     # OpenAI API key for AI features

# Logging
LOG_LEVEL=enum:debug|info|warn|error      # Application log level
