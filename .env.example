# ===========================================
# ZEKE Personal AI Assistant - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit your actual .env file to version control

# ===========================================
# REQUIRED - Application will fail to start without these
# ===========================================

# OpenAI API Key - Required for AI responses and embeddings
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Database URL - Connection string for the database
# For SQLite (local): file:./zeke.db or just zeke.db
# For PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=zeke.db

# JWT Secret - Used for token signing and session encryption
# Generate a random string (e.g., openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key

# ===========================================
# APPLICATION SETTINGS (Optional)
# ===========================================

# Application name
APP_NAME=ZEKE

# Runtime environment: development | staging | production
APP_ENV=development

# Server port (default: 5000)
PORT=5000

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Session secret (for Express sessions)
SESSION_SECRET=your-session-secret

# Context Router - Enable TypeScript context router system
USE_CONTEXT_ROUTER=false

# ===========================================
# PYTHON AGENTS (Optional)
# ===========================================

# Python agents port (default: 5001)
PYTHON_AGENTS_PORT=5001

# Python path for module resolution
PYTHONPATH=python_agents

# ===========================================
# RUN BUDGET GUARDS
# ===========================================

# Max tool invocations per agent run
RUN_MAX_TOOL_CALLS=50

# Max wall-clock seconds per run (5 min default)
RUN_MAX_SECONDS=300

# ===========================================
# CIRCUIT BREAKER SETTINGS
# ===========================================

# Failures before circuit opens
CB_FAIL_THRESHOLD=5

# Seconds to wait before retrying after circuit opens
CB_COOLDOWN_SEC=60

# ===========================================
# JSONL LOGGING CONFIGURATION
# ===========================================

# Max log file size before rotation (10MB default)
LOG_MAX_BYTES=10485760

# Number of rotated log files to keep
LOG_RETENTION_FILES=5

# ===========================================
# MEMORY TTL BUCKETS (seconds)
# ===========================================

# Transient bucket: 36 hours (for calendar events, etc.)
MEM_TTL_TRANSIENT=129600

# Session bucket: 7 days (for task/ops scopes)
MEM_TTL_SESSION=604800

# Note: LONG_TERM bucket has no TTL (permanent, for persona/notes)

# ===========================================
# SLO TARGETS
# ===========================================

# Max cost per eval run in cents ($1.00 default)
COST_TARGET_CENTS=100

# Max P95 latency in milliseconds
P95_TARGET_MS=2000

# ===========================================
# SMS MESSAGING (Optional - Twilio)
# ===========================================

# Twilio Account SID - Found in your Twilio Console
# https://console.twilio.com/
TWILIO_ACCOUNT_SID=

# Twilio Auth Token - Found in your Twilio Console
TWILIO_AUTH_TOKEN=

# Twilio Phone Number - Your Twilio phone number (E.164 format)
TWILIO_PHONE_NUMBER=

# Master Admin Phone Number - Your personal phone for receiving admin notifications
MASTER_ADMIN_PHONE=

# ===========================================
# OMI PENDANT (Optional)
# ===========================================

# Omi API Key - For Omi pendant voice recording integration
# Get yours from the Omi app or developer portal
OMI_API_KEY=

# Alternative Omi keys (development/MCP)
OMI_DEV_API_KEY=
OMI_MCP_API_KEY=

# Enable command detection from Omi transcripts
OMI_COMMANDS_ENABLED=false

# ===========================================
# GOOGLE CALENDAR (Optional)
# ===========================================

# Google Calendar Service Account Credentials (JSON string)
# Create a service account at: https://console.cloud.google.com/
GOOGLE_CALENDAR_CREDENTIALS=

# Google Calendar ID to sync with
# Usually your calendar email or a specific calendar ID
GOOGLE_CALENDAR_ID=

# ===========================================
# WEATHER (Optional)
# ===========================================

# OpenWeatherMap API Key - For weather data and alerts
# Get yours at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=

# ===========================================
# ENHANCED SEARCH (Optional)
# ===========================================

# Perplexity API Key - For enhanced AI-powered web search
# Get yours at: https://www.perplexity.ai/
PERPLEXITY_API_KEY=

# ===========================================
# INTERNAL / SYSTEM (Optional)
# ===========================================

# Internal Bridge Key - Used for internal service communication
INTERNAL_BRIDGE_KEY=

# Export Secret Token - For secure data exports
EXPORT_SECRET_TOKEN=

# Overland Access Token - For GPS location tracking
OVERLAND_ACCESS_TOKEN=

# ===========================================
# MORNING BRIEFINGS (Optional)
# ===========================================

# Enable automated morning briefings
MORNING_BRIEFING_ENABLED=false

# Phone number to receive morning briefings
MORNING_BRIEFING_PHONE=

# ===========================================
# REPLIT SYSTEM VARIABLES (Automatically Set)
# ===========================================
# These are set automatically by Replit - do not modify
# REPLIT_DEV_DOMAIN=your-repl.repl.co
# REPLIT_DOMAINS=your-repl.repl.co
# REPLIT_CONNECTORS_HOSTNAME=
# REPL_IDENTITY=
