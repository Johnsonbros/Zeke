#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd -- "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT_DIR"

if ! command -v uv >/dev/null 2>&1; then
  python -m pip install --upgrade --user uv
fi

npm ci
uv sync --locked

npm run db:init

if [[ "${SKIP_START:-0}" != "1" ]]; then
  npm run dev
fi
